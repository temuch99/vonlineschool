<%= simple_form_for [:admin, @course], wrapper: :horizontal_form, html: { class: 'form-horizontal' } do |f| %>
	<%= f.input :title %>
	<%= f.input :description %>
	<%= f.input :image %>

	<div class="button-box float-right">
		<%= f.submit "Сохранить", class: 'btn btn-primary' %>
		<%= link_to "Назад", admin_courses_path, class: "btn btn-danger" %>
	</div>
<% end %>