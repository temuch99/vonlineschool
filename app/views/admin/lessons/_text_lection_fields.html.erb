<div class="nested-fields card">
	<div class="card-header">
		<span class="handle">Файл</span>
	</div>
	<div>
		<%= f.input :title %>
		<%= link_to "Скачать Файл", "#{root_url}#{f.object.lection.url}", class: "btn btn-success" if f.object.lection? %>
		<%= f.input :lection, as: :file %>
		<%= link_to_remove_association 'Удалить файл', f, class: "btn btn-danger" %>
	</div>
</div>