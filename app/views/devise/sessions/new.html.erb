<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <div class="text-center mb-4">
     <h2>Войти</h2>
  </div>
  <div class="form-label-group">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>
  <div class="form-label-group">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>
  <div class="checkbox mb-3">
    <%= f.input :remember_me, label: "Запомнить меня", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Войти", class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>