<div class="container">
	<h3>Все вопросы</h3>
	<div class="row">
		<% answers.order(:created_at).each_with_index do |answer, i| %>
			<div class="col-2">
				<% status = answer.answer.nil? ? "skipped" : "success" %>
				<%= button_to [:edit, @course, @lesson, @survey_attempt, answer.question], method: :get do %>
					<div class='col-12 <%= status %>'><%= i + 1 %></div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>