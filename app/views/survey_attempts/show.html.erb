<table class="table table-striped table-sm">
	<thead>
		<th>Номер вопроса</th>
		<th>Ответ</th>
		<th>Перейти к вопросу</th>
	</thead>
	<tbody>
		<% @answers.order(:created_at).each_with_index do |answer, index|%>
			<tr>
				<td><%= index + 1 %></td>
				<td><%= answer.answer %></td>
				<td><%= link_to "Вопрос", [:edit, @course, @lesson, @survey_attempt, answer.question] %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= button_to "Закончить прохождение теста", [@course, @lesson, @survey_attempt], data: {confirm: "Вы уверены, что хотите закончить попытку?"}, method: :delete, class: "btn btn-success" %>