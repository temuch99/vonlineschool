<%= simple_form_for(@user, method: :patch, class: "form-signin") do |f| %>
  <div class="text-center mb-4">
     <h2>Войти</h2>
  </div>
  <div class="form-label-group">
    <%= f.input :nickname,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>
  <div class="form-label-group">
    <%= f.input :first_name,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>
  <div class="form-label-group">
    <%= f.input :last_name,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>
  <div class="form-label-group">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-label-group">
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Войти", class: "btn btn-info" %>
  </div>
<% end %>