<div class="row">
	<div class="col-md-offset-2 col-md-8 col-lg-12">
		<div class="col-sm-12">
			<div class="row">
				<div class="col-12 col-sm-9">
					<h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
					<p>
						<strong>Email: <%= @user.email %>. </strong>
					</p>
					<p>
						<strong>Email родителя: <%= @user.parent_email %>. </strong>
					</p>
					<div class="btn-group">
                        <%# button_to "Редактировать профиль", [:edit, @user, :registration], method: :get, class: "btn btn-sm btn-primary" %>
                        <%# button_to "Удалить профиль", [@user, :registration], method: :delete, data: {confirm: "Вы уверены?"}, class: "btn btn-sm btn-danger" %>
                    </div>
				</div>
				<div class="col-12 col-sm-3 text-center">
					<figure>
						<% if @user.avatar %>
							<%= image_tag @user.avatar.url %>
						<% else %>
							<img src="<%= root_url %>/img/core-img/user.png" width="100%" height="100%" style="object-fit: cover;">
						<% end %>
					</figure>
				</div>
			</div>
		</div>
	</div>
</div>


